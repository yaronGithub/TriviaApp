<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaAppClean.Views.AddQuestionView"
             Title="AddQuestionView">
    <VerticalStackLayout Padding="10">
        <Label Text="Add Question:" Margin="5" Style="{StaticResource headingStyle}"/>
        <Label Text="Question Content"/>
        <Entry Placeholder="Enter question content..." Text="{Binding }"/>
        <Label Text="Correct Answer"/>
        <Entry Placeholder="Add correct answer" Text="{*}"/>
        <Label Text="Wrong Answer1" />
        <Entry Placeholder="Add the 1st wrong answer..." Text="{*}"/>
        <Label Text="Wrong Answer2" />
        <Entry Placeholder="Add the 2st wrong answer..." Text="{*}"/>
        <Label Text="Wrong Answer2" />
        <Entry Placeholder="Add the 2st wrong answer..." Text="{*}"/>
        <Button Text="Add Question" Command="{*}" Margin="5"></Button>
    </VerticalStackLayout>
</ContentPage>