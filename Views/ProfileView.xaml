<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaAppClean.Views.ProfileView"
             Title="ProfileView">
    <VerticalStackLayout>
        <Label Text="Edit Profile:" FontSize="Large" TextColor="MediumSpringGreen"/>
        <Label Text="{Binding Name}" Style="{StaticResource headingStyle}"/>

        <Label Text="{Binding Rank}" Style="{StaticResource headingStyle}"/>

        <Label Text="{Binding Name}"/>
        <Entry Text="{Binding NameError}"/>
        <Label Text="Email"/>
        <Entry  Text="{Binding EmailError}"/>
        <Label Text="Password" />
        <Entry  Text="{Binding PasswordError}"/>

        <Label Text="Points"/>
        <Label Text="{Binding Points}"/>
        <Button Text="Sign Up" Command="{Binding SaveProfileCommand}" Margin="5"></Button>

    </VerticalStackLayout>
</ContentPage>