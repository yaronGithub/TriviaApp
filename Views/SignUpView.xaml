<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TriviaAppClean.Views.SignUpView"
             Title="SignUpView">
    <VerticalStackLayout Padding="10">
        <Label Text="Sign Up" Margin="5" Style="{StaticResource headingStyle}"/>
        <Label Text="Name"/>
        <Entry Placeholder="Enter name..." Text="{Binding NameError}"/>
        <Label Text="Email"/>
        <Entry Placeholder="Enter email..." Text="{Binding EmailError}"/>
        <Label Text="Password" />
        <Entry Placeholder="Enter password..." Text="{Binding PasswordError}"/>
        <Button Text="Sign Up" Command="{Binding SaveDataCommand}" Margin="5"></Button>
       
        <!--<ActivityIndicator IsRunning="{Binding InServerCall}" Color="Red"></ActivityIndicator>-->
    </VerticalStackLayout>
</ContentPage>