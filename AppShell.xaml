<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TriviaAppClean.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TriviaAppClean.Views"
    Shell.FlyoutBehavior="Flyout">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:TriviaGameView}"
        Route="LoginView"/>
    <FlyoutItem IsVisible="{Binding IsTrainee}" FlyoutDisplayOptions="AsMultipleItems" Route="tabs">
        <ShellContent
         Title="Profile" 
         ContentTemplate="{DataTemplate views:ProfileView}"
         Route="profile" />
        
        <ShellContent
         Title="Start Game"
         ContentTemplate="{DataTemplate views:TriviaGameView}"
         Route="startGame" />
        
        <ShellContent
         Title="High Scores" 
         ContentTemplate="{DataTemplate views:HighScoresView}"
         Route="highScores" />
        
        <ShellContent
      Title="Add Question"
      ContentTemplate="{DataTemplate views:AddQuestionView}"
      Route="addQuestion" />
    </FlyoutItem>
    

    <FlyoutItem  IsVisible="{Binding IsMaster}" FlyoutDisplayOptions="AsMultipleItems" Route="tabs">
        <ShellContent
    Title="Profile" 
         ContentTemplate="{DataTemplate views:ProfileView}"
         Route="profile" />

        <ShellContent
         Title="Start Game"
         ContentTemplate="{DataTemplate views:TriviaGameView}"
         Route="startGame" />

        <ShellContent
         Title="High Scores" 
         ContentTemplate="{DataTemplate views:HighScoresView}"
         Route="highScores" />

        <ShellContent
      Title="Add Question"
      ContentTemplate="{DataTemplate views:AddQuestionView}"
      Route="addQuestion" />

        <ShellContent
      Title="Question Approval" 
      ContentTemplate="{DataTemplate views:QuestionApprovalView}"
      Route="questionApproval" />
    </FlyoutItem>

    
    
    <FlyoutItem IsVisible="{Binding IsAdmin}" FlyoutDisplayOptions="AsMultipleItems" Route="tabs">
        <ShellContent
                
      Title="Profile" 
      ContentTemplate="{DataTemplate views:ProfileView}"
      Route="profile" />

        <ShellContent
      Title="Start Game"
      ContentTemplate="{DataTemplate views:TriviaGameView}"
      Route="startGame" />

        <ShellContent
      Title="High Scores" 
      ContentTemplate="{DataTemplate views:HighScoresView}"
      Route="highScores" />

        <ShellContent
   Title="Add Question"
   ContentTemplate="{DataTemplate views:AddQuestionView}"
   Route="addQuestion" />
        
        <ShellContent
      Title="Question Approval" 
      ContentTemplate="{DataTemplate views:QuestionApprovalView}"
      Route="questionApproval" />
        
        <ShellContent
         Title="Player List" 
   ContentTemplate="{DataTemplate views:PlayerListView}"
   Route="playerList" />

        <ShellContent 
            Title="All Questions"
            ContentTemplate="{DataTemplate views:AllQuestionsView}"
            Route="allQuestions"
            />

    </FlyoutItem>
</Shell>
